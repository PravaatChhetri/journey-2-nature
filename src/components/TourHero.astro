---
interface Props {
  title: string;
  duration: string;
  image: string;
}

const { title, duration, image } = Astro.props;
---

<section class="relative h-[60vh] overflow-hidden">
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat transform transition-transform duration-500 hover:scale-105"
    style={`background-image: url(${image})`}
  >
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/30"></div>
  </div>
  <div class="relative container mx-auto px-4 h-full flex items-center">
    <div class="text-white max-w-3xl">
      <h1 class="text-5xl font-bold mb-4">{title}</h1>
      <p class="text-2xl opacity-90">{duration}</p>
    </div>
  </div>
</section>