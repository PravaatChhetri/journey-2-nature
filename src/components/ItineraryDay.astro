---
interface Props {
  day: number;
  title: string;
  activities: string[];
  meals: string[];
  accommodation: string;
}

const { day, title, activities, meals, accommodation } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 hover:scale-[1.02] p-6">
  <div class="flex flex-col md:flex-row gap-4">
    <div class="flex-shrink-0">
      <span class="inline-block bg-green-100 text-green-800 text-lg font-semibold px-4 py-2 rounded">
        Day {day}
      </span>
    </div>
    <div class="flex-grow space-y-4">
      <h3 class="text-xl font-bold text-gray-800">{title}</h3>
      
      <div>
        <h4 class="font-semibold text-green-700 mb-2">Activities</h4>
        <ul class="list-disc list-inside space-y-2">
          {activities.map(activity => (
            <li class="text-gray-700">{activity}</li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-semibold text-green-700 mb-2">Meals</h4>
        <ul class="list-disc list-inside space-y-1">
          {meals.map(meal => (
            <li class="text-gray-700">{meal}</li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-semibold text-green-700 mb-2">Accommodation</h4>
        <p class="text-gray-700">{accommodation}</p>
      </div>
    </div>
  </div>
</div>