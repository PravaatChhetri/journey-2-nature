---
interface Props {
  title: string;
  duration: string;
  price: string;
  image: string;
  description: string;
  slug: string;
}

const { title, duration, price, image, description, slug } = Astro.props;
---
<div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300">
  <a href={`/packages/${slug}`} class="block">
    <img src={image} alt={title} class="w-full h-48 object-cover">
    <div class="p-6">
      <h3 class="text-xl font-bold mb-2">{title}</h3>
      <p class="text-gray-600 mb-4">{description}</p>
      <div class="flex justify-between items-center">
        <span class="text-gray-500">{duration}</span>
        <span class="font-bold text-green-600">{price}</span>
      </div>
    </div>
  </a>
</div>