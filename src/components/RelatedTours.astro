---
import TourCard from './TourCard.astro';
import { getRelatedTours } from '../utils/tourData';

interface Props {
  currentTourSlug: string;
}

const { currentTourSlug } = Astro.props;
const relatedTours = getRelatedTours(currentTourSlug);
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8">Similar Tours You Might Like</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {relatedTours.map(tour => (
        <TourCard {...tour} />
      ))}
    </div>
  </div>
</section>